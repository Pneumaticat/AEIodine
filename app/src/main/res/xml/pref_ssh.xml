<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/pref_key_ssh_ip"
        android:title="@string/pref_title_ssh_ip" />
    <EditTextPreference
        android:key="@string/pref_key_ssh_port"
        android:title="@string/pref_title_ssh_port"
        android:inputType="number"
        android:defaultValue="22" />
    <SwitchPreference
        android:key="@string/pref_key_ssh_use_compression"
        android:title="@string/pref_title_ssh_use_compression"
        android:summary="@string/pref_summary_ssh_use_compression"
        android:defaultValue="true" />
</PreferenceScreen>
